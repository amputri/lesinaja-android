            android:name=".ui.tutor.les.presensi.UbahJadwalTutorActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.tutor.les.presensi.PresensiTutorActivity" />
        <activity
            android:name=".ui.tutor.les.DetailLesActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.tutor.les.LesTutorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.walimurid.les.presensi.UbahJadwalActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.walimurid.les.presensi.LaporanActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.walimurid.les.presensi.PresensiActivity"
